<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/accountInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/account1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="18dp"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9"
            app:cardCornerRadius="30dp">
            <ImageView
                android:id="@+id/accountPicture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                tools:src="@drawable/pm" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/AccountName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@id/account1"
            android:textColor="@color/black_800"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="udemy"/>
        <TextView
            android:id="@+id/tagLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="40dp"
            android:layout_toEndOf="@id/account1"
            android:textColor="@color/dark_grey"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="Sponsored"/>
    </RelativeLayout>
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0.55dp"
        android:layout_below="@id/accountInfo"
        android:layout_marginTop="16dp"
        android:background="@color/black_200"/>
    <ImageView
        android:id="@+id/post"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/divider"
        tools:src="@drawable/pg"/>
    <LinearLayout
        android:id="@+id/choices"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/post"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/ic_like" />
        <ImageButton
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:padding="2dip"
            android:scaleType="fitCenter"
            android:src="@drawable/comment"/>
        <ImageButton
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:padding="2dip"
            android:scaleType="fitCenter"
            android:src="@drawable/share"/>
        <ImageButton
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="238dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:src="@drawable/save"/>
    </LinearLayout>
    <TextView
        android:id="@+id/likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/choices"
        android:textColor="@color/black"
        android:textStyle="bold"
        tools:text="169 likes"
        android:layout_marginStart="16dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/likes"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/accountName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            tools:text="udemy"
            android:layout_marginStart="16dp"/>
        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            tools:text="Mind soothing view"
            android:maxWidth="272dp"
            android:maxLines="1"
            android:layout_marginStart="8dp"/>
    </LinearLayout>
</RelativeLayout>